{% extends 'base.html.twig' %}

{% block title %}PHP Note{% endblock %}

{% block body %}
  <h1>Hello {{ name }}</h1>
  <p>Welcome to <span class="text-monospace">index.html.twig</span></p>

  <hr>

  {% if articles %}
    <table id="articles" class="table table-striped">
      <thead>
        <tr>
          <th>Article Title</th>
          <th>Article Author</th>
          <th colspan="3" class="text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for article in articles %}
        <tr>
          <td>{{ article.title }}</td>
          <td>{{ article.author }}</td>
          <td>
            <a class="btn btn-dark" href="/article/{{ article.id }}">Show</a>
          </td>
          <td>
            <a class="btn btn-dark" href="/article/edit/{{ article.id }}">Edit</a>
          </td>
          <td>
            <a class="btn btn-danger delete-article" href="#" data-id="{{ article.id }}">Delete</a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>No Articles to display</p>
  {% endif %}
{% endblock %}

{% block javascripts %}
  <script src="/js/main.js"></script>
{% endblock %}